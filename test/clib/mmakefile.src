#   Makefile for AROS C Library Tests

include $(TOP)/config/make.cfg

FILES := \
	all-tests \
	chdir \
	strchr \
	stpblk

EXEDIR := $(AROSDIR)/test/clib
EXES := $(foreach f,$(FILES),$(EXEDIR)/$(f))

USE_CLIB_SHARED := yes
USE_AMIGALIB := yes
USE_MLIB := yes
USE_AROSLIB := yes

#MM test-clib : includes includes-copy linklibs kernel

%make_prog_setup mmake=test-clib

test-clib : setup $(EXES)

setup ::
	%mkdir_q $(EXEDIR)
	
%make_prog_single dir=$(EXEDIR)

%common
%include_deps

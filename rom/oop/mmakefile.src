include $(TOP)/config/make.cfg

FILES	  :=	hash hiddmetaclass metaclass basemetaclass  \
		privatestubs rootclass support 
	
FUNCS :=    addclass		\
	    disposeobject	\
	    findclass		\
	    getattr		\
	    getattrbase		\
	    getmethod		\
	    getmethodid		\
	    newobject		\
	    obtainattrbase	\
	    obtainattrbases	\
	    parseattrs		\
	    releaseattrbase	\
	    releaseattrbases	\
	    removeclass		\
	    setattrs

USER_CFLAGS := -DAROS_USE_OOP -D__OOP_NOLIBBASE__
USER_CFLAGS += $(PARANOIA_CFLAGS)

#MM kernel-oop-includes : \
#MM     kernel-exec-includes \
#MM     kernel-utility-includes

%build_module mmake=kernel-oop \
  modname=oop modtype=library \
  files="oop_init $(FUNCS) $(FILES)" \
  uselibs="rom"

#MM includes-copy

INCLUDE_FILES := $(call WILDCARD, include/*.h)
%copy_includes path=oop dir=include

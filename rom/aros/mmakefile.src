kernel-aros-create-abi-file :
	$(MKDIR) $(AROS_PREFS)/Env-Archive
	$(SED) -n 's/#define AROS_ABI_VERSION_MAJOR// p' < $(SRCDIR)/$(CURDIR)/arosinquirea.c | $(SED) -n 's/^ *//;s/[ */*].*//p' > $(AROS_PREFS)/Env-Archive/ABI

timeout 5
default 3

title AROS (native graphics)
    multiboot /boot/pc/bootstrap.gz ATA=32bit
    module /boot/pc/kernel.gz
    module /boot/pc/aros-bsp.pkg.gz
    module /boot/aros-base.pkg.gz
    module /boot/aros-fs.pkg.gz
    module /boot/poseidon.pkg.gz

title AROS (true colour VESA graphics)
    multiboot /boot/pc/bootstrap.gz vesa=32bit ATA=32bit nomonitors
    module /boot/pc/kernel.gz
    module /boot/pc/aros-bsp.pkg.gz
    module /boot/aros-base.pkg.gz
    module /boot/aros-fs.pkg.gz
    module /boot/poseidon.pkg.gz
	
title AROS (high colour VESA graphics)
    multiboot /boot/pc/bootstrap.gz vesa=16bit ATA=32bit nomonitors
    module /boot/pc/kernel.gz
    module /boot/pc/aros-bsp.pkg.gz
    module /boot/aros-base.pkg.gz
    module /boot/aros-fs.pkg.gz
    module /boot/poseidon.pkg.gz

title AROS (true colour VESA graphics, legacy drivers)
    multiboot /boot/pc/bootstrap.gz vesa=32bit ATA=32bit nomonitors
    module /boot/pc/kernel.gz
    module /boot/pc/aros-bsp.pkg.gz
    module /boot/pc/aros-legacy.pkg.gz
    module /boot/aros-base.pkg.gz
    module /boot/aros-fs.pkg.gz
    module /boot/poseidon.pkg.gz

title AROS (true colour VESA graphics: 1024x768)
    multiboot /boot/pc/bootstrap.gz vesa=1024x768 ATA=32bit nomonitors
    module /boot/pc/kernel.gz
    module /boot/pc/aros-bsp.pkg.gz
    module /boot/aros-base.pkg.gz
    module /boot/aros-fs.pkg.gz
    module /boot/poseidon.pkg.gz

title AROS (true colour VESA graphics: 1280x1024)
    multiboot /boot/pc/bootstrap.gz vesa=1280x1024 ATA=32bit nomonitors
    module /boot/pc/kernel.gz
    module /boot/pc/aros-bsp.pkg.gz
    module /boot/aros-base.pkg.gz
    module /boot/aros-fs.pkg.gz
    module /boot/poseidon.pkg.gz

title AROS (VGA graphics, safe mode)
    multiboot /boot/pc/bootstrap.gz ATA=nodma debug=memory nomonitors
    module /boot/pc/kernel.gz
    module /boot/pc/aros-bsp.pkg.gz
    module /boot/aros-base.pkg.gz
    module /boot/aros-fs.pkg.gz
    module /boot/poseidon.pkg.gz

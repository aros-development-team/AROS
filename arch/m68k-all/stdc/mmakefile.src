include $(SRCDIR)/config/aros.cfg

USER_AFLAGS  := -I$(GENINCDIR)
USER_CPPFLAGS := -DDEBUG=0
USER_INCLUDES := -I$(SRCDIR)/compiler/stdc
TARGET_ISA_AFLAGS := $(ISA_MC68020_FLAGS)

STDC_M68K_FILES := \
    fenv

STDC_M68K_ASMFILES := \
    longjmp \
    setjmp

# Add FPU based runtime-replacement math functions ..
STDC_M68K_ASMFILES += \
    math/e_acos-881 \
    math/e_asin-881 \
    math/e_atanh-881 \
    math/e_cosh-881 \
    math/e_exp-881 \
    math/e_fmod-881 \
    math/e_hypot-881 \
    math/e_log-881 \
    math/e_log10-881 \
    math/e_log2-881 \
    math/e_remainder-881 \
    math/e_sinh-881 \
    math/e_sqrt-881 \
    math/s_atan-881 \
    math/s_ceil-881 \
    math/s_copysign-881 \
    math/s_cos-881 \
    math/s_exp2-881 \
    math/s_fabs-881 \
    math/s_fdim-881 \
    math/s_floor-881 \
    math/s_fma-881 \
    math/s_fmax-881 \
    math/s_fmin-881 \
    math/s_fpclassify-881 \
    math/s_isfinite-881 \
    math/s_isinf-881 \
    math/s_isnan-881 \
    math/s_isnormal-881 \
    math/s_lround-881 \
    math/s_nearbyint-881 \
    math/s_round-881 \
    math/s_signbit-881 \
    math/s_sin-881 \
    math/s_tan-881 \
    math/s_tanh-881 \
    math/s_trunc-881

STDC_M68K_FILES += \
    __stdc_fpumath

%build_archspecific \
  mainmmake=compiler-stdc \
  modname=stdc maindir=compiler/stdc \
  arch=m68k \
  files="$(STDC_M68K_FILES)" asmfiles="$(STDC_M68K_ASMFILES)"


# $Id$
include $(TOP)/config/make.cfg

EXEDIR := $(BINDIR)/boot

FILES         := bootstrap elfloader32 hostinterface memory support shutdown
USER_INCLUDES := -I$(SRCDIR)/arch/all-$(ARCH)/kernel -I$(GENINCDIR)

ifeq ($(ARCH),mingw32)
    EXE_SUFFIX := .exe
else
    LIBS := dl
endif

%build_prog mmake=kernel-bootstrap-hosted \
    progname=AROSBootstrap$(EXE_SUFFIX) targetdir=$(EXEDIR) \
    files=$(FILES) compiler=kernel uselibs=$(LIBS)

%common

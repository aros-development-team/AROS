include $(TOP)/config/make.cfg

#MM- workbench-hosted:  $(SDL_HIDD_TARGET)     \
#MM			workbench-devs-cdvdfs-packet  \
#MM			workbench-devs-sfs-packet

#MM- kernel-link-hosted: kernel-bootloader-kobj kernel-dosboot-kobj kernel-link-hosted-quick

#MM
kernel-link-hosted-quick: $(BINDIR)/boot/aros-strap-hosted

KOBJS_HOSTED := $(KOBJSDIR)/bootloader_resource.o $(KOBJSDIR)/dosboot_resource.o

$(BINDIR)/boot/aros-strap-hosted: $(KOBJS_HOSTED)
	@$(ECHO) Linking $@...
	@$(MKDIR) $(GENDIR)/boot $(BINDIR)/boot
	@$(TARGET_CC) $(GENMAP) $(GENDIR)/boot/kernel-hosted.map \
	  -o $@ $^ $(CONFIG_LDFLAGS) $(NOSTARTUP_LDFLAGS) -Wl,--allow-multiple-definition \
	  -L$(LIBDIR) -lautoinit -llibinit -lamiga -larossupport -lrom -larosm

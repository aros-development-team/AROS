$(OBJDIR)/evalParser.tab.c : evalParser.y
	@$(ECHO) Generating $(notdir $@) from $<...
	@$(BISON) -o $@ $<

%build_progs mmake=workbench-c \
    files="$(FILES)" targetdir=$(AROS_C) \
    uselibs="uuid debug" coverageinstr=no

$(workbench-c_DEPS) : $(OBJDIR)/evalParser.tab.c


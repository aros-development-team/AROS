LIBAOMVERSION=3.12.1
AOMREPOSITORIES = https://storage.googleapis.com/aom-releases
AOMARCHBASE     := libaom-$(LIBAOMVERSION)
AOMARCHSUFFIX := "tar.gz"
#AOMPATCHSPEC := $(AOMARCHBASE)-aros.diff:$(AOMARCHBASE):-f,-p1
AOMARCHSRCDIR := $(PORTSDIR)/libaom/$(AOMARCHBASE)

%fetch mmake=linklibs-aom-fetch archive=$(AOMARCHBASE) destination=$(PORTSDIR)/libaom \
    location=$(PORTSSOURCEDIR) archive_origins=$(AOMREPOSITORIES) suffixes=$(AOMARCHSUFFIX) \
    patches_specs=$(PATCHSPEC)

%create_patch mmake=linklibs-aom-create-patch \
    archive=$(AOMARCHBASE) suffixes=$(AOMARCHSUFFIX) \
    srcdir="libaom-$(LIBAOMVERSION)" destination=$(PORTSDIR)/libaom

#MM- includes-copy : \
#MM     linklibs-aom-fetch linklibs-heif-fetch

#MM datatypes-heic-linklibs-aom : linklibs-aom-fetch datatypes-heic-linklibs-aom-generated

USER_INCLUDES   := -I$(GENDIR)/$(CURDIR)/libaom -I$(AOMARCHSRCDIR)

#LIBAOMCFILES := \
#            config/aom_config

LIBAOMCFILES := \
            aom/src/aom_codec \
            aom/src/aom_decoder \
            aom/src/aom_encoder \
            aom/src/aom_image \
            aom/src/aom_integer

LIBAOMCAFILES := \
            "${AOM_ROOT}/av1/arg_defs.c" \
            "${AOM_ROOT}/common/args_helper.c" \
            "${AOM_ROOT}/common/args.c" \
            "${AOM_ROOT}/common/av1_config.c" \
            "${AOM_ROOT}/common/md5_utils.c" \
            "${AOM_ROOT}/common/tools_common.c" \
            "${AOM_ROOT}/common/rawenc.c" \
            "${AOM_ROOT}/common/y4menc.c" \
            "${AOM_ROOT}/common/ivfdec.c" \
        "${AOM_ROOT}/common/obudec.c" \
        "${AOM_ROOT}/common/video_reader.c"

%build_linklib mmake=datatypes-heic-linklibs-aom \
    libname=aom \
    files="$(addprefix $(AOMARCHSRCDIR)/,$(LIBAOMCFILES))" \
    cxxfiles="$(addprefix $(AOMARCHSRCDIR)/,$(LIBAOMCXXFILES))" \
    objdir=$(GENDIR)/$(CURDIR)/libaom libdir=$(GENDIR)/$(CURDIR)/lib

$(GENDIR)/$(CURDIR)/libaom/config/aom_config.h : $(SRCDIR)/$(CURDIR)/aom_config.h $(SRCDIR)/$(CURDIR)/mmakefile.src
	@$(ECHO) "Generating libaom/config/aom_config.h ..."
	%mkdir_q dir=$(GENDIR)/$(CURDIR)/libaom/config
	@$(CP) $< $@

$(GENDIR)/$(CURDIR)/libaom/config/aom_version.h : $(SRCDIR)/$(CURDIR)/aom_version.h $(SRCDIR)/$(CURDIR)/mmakefile.src
	@$(ECHO) "Generating libaom/config/aom_version.h ..."
	%mkdir_q dir=$(GENDIR)/$(CURDIR)/libaom/config
	@$(CP) $< $@


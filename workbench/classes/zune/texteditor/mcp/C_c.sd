#include <proto/locale.h>

#include "SDI_compiler.h"
#include "Debug.h"

struct FC_Type { const long ID; const char * const Str; };

const struct FC_Type _%i = { %d, %s };

static struct Catalog *TE_Catalog = NULL;

/*** Catalog functions ***/
/// tr()
const char *tr(const void *fcstr)
{
  const char *defaultstr = ((struct FC_Type *)fcstr)->Str;

  if(LocaleBase)
    return (const char *)GetCatalogStr(TE_Catalog, ((struct FC_Type *)fcstr)->ID, (STRPTR)defaultstr);

  return defaultstr;
}
///
/// CloseCat()
void CloseCat(void)
{
  ENTER();

  if(TE_Catalog)
  {
    CloseCatalog(TE_Catalog);
    TE_Catalog = NULL;
  }

  LEAVE();
}
///
/// OpenCat(void)
BOOL OpenCat(void)
{
  static const struct TagItem tags[] = {
                                         { OC_BuiltInLanguage, (IPTR)%l },
                                         { OC_Version,         %v },
                                         { TAG_DONE,           0  }
                                       };

  ENTER();

  if(LocaleBase && TE_Catalog == NULL)
    TE_Catalog = OpenCatalogA(NULL, (STRPTR)"%b.catalog", (struct TagItem *)&tags[0]);

  RETURN((BOOL)(TE_Catalog != NULL));
  return (BOOL)(TE_Catalog != NULL);
}

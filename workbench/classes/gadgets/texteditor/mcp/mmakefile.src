USER_INCLUDES = -I$(TOP)/contrib/mui/classes/nlist/commonaros -I../mcc -I..

FILES := locale \
	 CreatePrefsGroup \
	 Dispatcher \
	 Keybindings \
	 KeyStorage \
	 ObjectCreator \
	 Debug
	 
%build_module mmake=workbench-classes-zune-texteditor-mcp \
  modname=TextEditor modtype=mcp \
  files=$(FILES) conffile=texteditor.conf \
  uselibs="amiga mui rom m"


#MM includes-copy

INCLUDE_FILES := $(TOP)/$(CURDIR)/TextEditor_mcp.h
%copy_includes path=MUI dir=$(TOP)/$(CURDIR)

#MM workbench-classes-zune-texteditor-mcp-locale :
workbench-classes-zune-texteditor-mcp-locale : locale.c locale.h

locale.h : locale.c
locale.c : locale/TextEditor_mcp.cd C_h.sd C_c.sd
	@$(ECHO) "Generating locale file $@..."
	@$(FLEXCAT) locale/TextEditor_mcp.cd locale.h=C_h.sd locale.c=C_c.sd

%common

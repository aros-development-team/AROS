include $(TOP)/config/make.cfg

#MM workbench-classes-zune-texteditor-mcp : includes \
#MM 					    linklibs \
#MM					    workbench-classes-zune-texteditor-class \
#MM					    workbench-classes-zune-texteditor-mcp-locale \

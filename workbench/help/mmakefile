# $Id$

include $(TOP)/config/make.cfg

HELPDIR := $(BINDIR)/Help

#MM workbench-help : setup
workbench-help: $(HELPDIR)/License $(HELPDIR)/Credits
	$(NOP)

$(HELPDIR)/License : $(TOP)/LICENSE ;\
    $(CP) $< $@

$(HELPDIR)/Credits : $(TOP)/docs/src/credits ;\
    $(CP) $< $@

#MM
setup :
	@$(IF) $(TEST) ! -d $(HELPDIR) ; then $(MKDIR) $(HELPDIR) ; else $(NOP) ; fi

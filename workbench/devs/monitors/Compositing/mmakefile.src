include $(TOP)/config/make.cfg

FILES   := compositingclass startup
EXEDIR  := $(AROSDIR)/Devs/Monitors
EXENAME := Compositor

USER_INCLUDES := -I$(SRCDIR)/$(CURDIR)/include

%build_prog mmake=devs-monitors-composition \
           progname=$(EXENAME) targetdir=$(EXEDIR) \
           files=$(FILES) uselibs="oop"

INCLUDE_FILES := $(call WILDCARD, include/*.h)

%copy_includes mmake=includes-composition-copy path=hidd dir=include

%common

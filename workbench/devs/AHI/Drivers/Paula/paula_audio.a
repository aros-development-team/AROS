*       AHIsub_Disable(), exec.library/Enable()
*
*****************************************************************************
*
*
*

AHIsub_Enable:
	PRINTF	6,"AHIsub_Enable()"
	pushm	a3/a6
	move.l	ahiac_DriverData(a2),a3

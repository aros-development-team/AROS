	move.l	a0,d1
	move.l	sp,d2
	moveq	#8,d3
	moveq	#0,d4
	call	GetVar

	addq.l	#1,d0				;cmp.l	#-1,d0
	beq	.gotvar
	move.l	sp,d1
	clr.l	-(sp)

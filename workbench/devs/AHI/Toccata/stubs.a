	xdef	_puta4
	xref	_ToccataBase

_puta4
	move.l	a4,varbase
	rts

_GetRawReply:
	move.l	#_RawReply,d0
	rts

_RawReply:
	move.l	a0,-(a7)
	move.l	varbase,a0
	move.l	#1,_NextBufferOK(a0)
	move.l	(a7)+,a0
	rts

_HookLoad:
	pushm	a5/a6
	move.l	h_Data(a0),a6
	move.l	h_SubEntry(a0),a5
	jsr	(a5)
	popm	a5/a6
	rts

_SlaveTaskEntry:
	move.l	varbase,a4
	move.l	_ToccataBase(a4),a6
	jmp	_SlaveTask

_IOTaskEntry:
	move.l	varbase,a4
	move.l	_ToccataBase(a4),a6
	jmp	_IOTask



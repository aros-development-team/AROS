# SConscript file for SCons for Commodities

# Get the exported variables
Import('*')

# Object files will be stored there
VariantDir(gendir + '/tools/commodities', '.')


# Build all Commodities with standard linklibs
targetEnv.Program(arosdir + '/Tools/Commodities/AutoPoint', 'AutoPoint.c')
targetEnv.Program(arosdir + '/Tools/Commodities/Blanker', 'Blanker.c')
targetEnv.Program(arosdir + '/Tools/Commodities/ClickToFront', 'ClickToFront.c')
targetEnv.Program(arosdir + '/Tools/Commodities/DepthMenu', 'DepthMenu.c')
targetEnv.Program(arosdir + '/Tools/Commodities/NoCapsLock', 'NoCapsLock.c')
targetEnv.Program(arosdir + '/Tools/Commodities/Opaque', 'Opaque.c')


# FIXME: is it really necessary to create a new environment when I have
# different libs?

localEnv = targetEnv.Clone()
localEnv.Append(LIBS = ['mui'])

localEnv.Program(arosdir + '/Tools/Commodities/AltKeyQ', 'AltKeyQ.c')
localEnv.Program(arosdir + '/Tools/Commodities/ASCIITable', 'ASCIITable.c')
localEnv.Program(arosdir + '/Tools/Commodities/Exchange', 'Exchange.c')
localEnv.Program(arosdir + '/Tools/Commodities/FKey', 'FKey.c')

# Create strings.h
targetEnv.Locale_H('strings.h', 'catalogs/commodities.cd')

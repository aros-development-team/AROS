$(OBJDIR)/%.o : bdf/%.c
	%compile_q opt="$(CFLAGS) -Ibdf"

$(OBJDIR)/%.d : bdf/%.c
	%mkdepend_q flags="$(CFLAGS) -Ibdf"

$(OBJDIR)/%.o : pcf/%.c
	%compile_q opt="$(CFLAGS) -Ipcf"

$(OBJDIR)/%.d : pcf/%.c
	%mkdepend_q flags="$(CFLAGS) -Ipcf"


    base/ftmm \
    base/ftsynth \
    autohint/autohint \
    autohint/ahoptim \
    cache/ftcache \
    cff/cff \
    pshinter/pshinter \
    psaux/psaux \
    psnames/psnames \
    raster/raster \
    sfnt/sfnt \
    smooth/smooth \
    truetype/truetype \
    type1/type1 \

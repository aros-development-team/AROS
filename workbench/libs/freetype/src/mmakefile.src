    base/ftpfr \
    base/fttype1 \
    base/ftwinfnt \
    base/ftxf86 \
    cache/ftcache \
    cff/cff \
    pshinter/pshinter \
    psaux/psaux \
    psnames/psnames \
    raster/raster \
    sfnt/sfnt \
    smooth/smooth \
    truetype/truetype \

$(OBJDIR)/%.d : sfnt/%.c
	%mkdepend_q flags="$(CFLAGS) -Isfnt"

$(OBJDIR)/%.o : cache/%.c
	%compile_q opt="$(CFLAGS) -Icache"

$(OBJDIR)/%.d : cache/%.c
	%mkdepend_q flags="$(CFLAGS) -Icache"

$(OBJDIR)/%.o : cff/%.c
	%compile_q opt="$(CFLAGS) -Icff"

$(OBJDIR)/%.d : cff/%.c
	%mkdepend_q flags="$(CFLAGS) -Icff"

$(OBJDIR)/%.o : truetype/%.c

# openurl.library smake file

# Target
TARGET = openurl.library

# Compiler
C_COMPILER = sc

C_OPTIMIZE = OPTIMIZE OPTSCHEDULE NOOPTSIZE OPTTIME\
OPTINLINE OPTINLOCAL OPTLOOP NOOPTALIAS OPTPEEP\
OPTRDEPTH=5 OPTDEPTH=5 OPTCOMPLEXITY=8

C_COMPILER_OPTS = PARAMS=r NOCHECKABORT NOSTACKCHECK NOSTACKEXTEND STRINGMERGE\
COMMENTNEST IDLEN=128 IGNORE=315 IGNORE=317 INCLUDEDIR=/include\
$(C_OPTIMIZE)

# Assembler
ASSEMBLER = a68k
ASSEMBLER_OPTS = -iainc:

# Linker
LINKER = slink
LINKER_OPTS = NOICONS SC SD ND

# Objects
OBJECTS = libent.o libinit.o endcode.o init.o api.o handler.o prefs.o utils.o

# Libs
LIBS = LIB:sc.lib LIB:amiga.lib lib:debug.lib

# Built module
$(TARGET): $(OBJECTS) $(LIBS)
         $(LINKER) <with <
FROM $(OBJECTS) TO $(TARGET) LIB $(LIBS) $(LINKER_OPTS)
<
         avail flush

# Rules
.c.o:
        $(C_COMPILER) $*.c $(C_COMPILER_OPTS)

.asm.o:
        $(ASSEMBLER) $(ASSEMBLER_OPTS) $*.asm

# Dependences
libent.o:  libent.asm openurl.library_rev.i
libinit.o: libinit.c lib.h openurl.library_rev.h base.h lib_protos.h
endcode.o: endcode.asm
api.o:     api.c lib.h openurl.library_rev.h base.h lib_protos.h
handler.o: handler.c lib.h base.h lib_protos.h
init.o:    init.c lib.h base.h lib_protos.h
prefs.o:   prefs.c lib.h base.h lib_protos.h
utils.o:   utils.c lib.h base.h lib_protos.h


#MM hidd-serial-module : workbench-hidd-setup includes hidd-serial-$(ARCH)-$(CPU)
#hidd-serial-module : $(SLIB) $(STUB_FILE)   <--------------------- COMMENTED OUT !!!
hidd-serial-module : $(STUB_FILE)

# --- QUICK HACKS BEGIN --- 

# create stubs-file

$(STUB_FILE) : $(STUB_OBJS) $(MY_INCLS)
	%mklib_q from=$(STUB_OBJS)

$(OBJDIR)/%.o : %.c	
	%compile_q	

#MM
includes-copy : $(DEST_INC) $(GEN_INC)
	@$(NOP)

$(INCDIR)/hidd/%.h : include/%.h
	$(CP) include/$(notdir $<) $@

$(GENINCDIR)/hidd/%.h : include/%.h
	$(CP) include/$(notdir $<) $@

#MM
setup-includes :
	%mkdirs_q $(GENINCDIR) $(INCDIR) $(GENINCDIR)/hidd $(INCDIR)/hidd



#MM
clean ::
	-$(RM) $(OBJDIR) *.err $(LIB) *.s


%common

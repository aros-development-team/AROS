#MM hidd-serial-module-quick : kernel-oop-$(ARCH)-$(CPU)
hidd-serial-module-quick : $(LIB) $(SLIB)
	@$(NOP)

#MM hidd-serial-includes-quick : hidd-oop-$(ARCH)-$(CPU)
hidd-serial-includes-quick : setup-includes includes-copy 
	$(NOP)


#    sbindir = $(prefix)
#    libdir = $(AROS_LIB)
#    includedir = $(AROS_INCLUDES)
#    oldincludedir = $(AROS_INCLUDES)
# endif
#

%define build_with_configure mmake=/A package= srcdir=$(SRCDIR)/$(CURDIR) \

#------------------------------------------------------------------------------
# Rule to generate a functable
#
%define rule_genfunctable name=functable files=/A dir=. libdefs=libdefs.h

%(dir)/%(name).c : $(addsuffix .c,%(files)) $(BINDIR)/scripts/genfunctable.awk %(libdefs)
	@$(ECHO) "Generating $(CURDIR)/$(notdir $@)..."
ifneq (%(files),)
	$(AWK) -v file=%(libdefs) -f $(BINDIR)/scripts/genfunctable.awk $(addsuffix .c,%(files)) > $@
else
	$(ARCHTOOL) -t
	$(MV) functable.c $@
endif
%end

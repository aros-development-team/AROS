    %(mmake)-install_prefix      := prefix=$(CONTRIBDIR)
    %(mmake)-install_exec-prefix := exec_prefix=$(CONTRIBDIR)
    
    ifeq ($(%(mmake)-bindir),)
        %(mmake)-bindir  := --bindir=$(CONTRIBDIR)

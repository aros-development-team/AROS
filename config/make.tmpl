#------------------------------------------------------------------------------
# Strip symbols from the specified file
%define strip_q strip=$(STRIP) file=
	$(Q)$(IF) $(TEST) "%(strip)" != ""; then \
		$(IF) $(TEST) "$(DEBUG)" = "yes"; then \
			%(strip) %(file) --only-keep-debug -o %(file).dbg ; \
		fi ; \
		%(strip) %(file) ; \
		$(IF) $(TEST) "$(DEBUG)" = "yes"; then \
			$(IF) $(TEST) -s %(file).dbg ; then \
				$(OBJCOPY) --add-gnu-debuglink=%(file).dbg %(file) ; \
			fi ; \
		fi ; \
	fi
%end

#-------------------------------------------------------------------------
# Use cpak to generate the files functions.[ch]
#
%define rule_module_collect files=/A dir=.

%(dir)/functions.c %(dir)/functions.h : $(addsuffix .c,%(files))
	%mkdir_q %(dir)
	@$(CPAK) -d %(dir) %(files)
%end

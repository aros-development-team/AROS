# Builds a kickstart package in PKG format
#
# Arguments:
#
#    - mmake   = target name
#    - file    = destination file name with path
#    - startup = the file which will be put first
#
# Other arguments are self-explanatory

%define make_package mmake=/A file=/A classes= devs= handlers= hidds= libs= res= startup=

PKG_CLASSES   := $(addsuffix .class, %(classes))
PKG_DEVICES   := $(addsuffix .device, %(devs))
PKG_HANDLERS  := $(addsuffix -handler, %(handlers))
PKG_HIDD      := $(addsuffix .hidd, %(hidds))
PKG_LIBS      := $(addsuffix .library, %(libs))
PKG_RESOURCES := $(addsuffix .resource, %(res))

PKG_FILES := %(startup) $(PKG_CLASSES) $(PKG_DEVICES) $(PKG_HANDLERS) $(PKG_HIDD) $(PKG_LIBS) $(PKG_RESOURCES)
PKG_DIR   := $(dir %(file))
PKG_DEPS  := $(addprefix $(PKGDIR)/, $(PKG_FILES))

#MM
%(mmake) : %(file)

#MM
%(mmake)-quick : %(file)

%(file): PKG_FILES := $(PKG_FILES)
%(file): $(PKG_DEPS) | $(PKG_DIR)
	@$(ECHO) Packaging $@...
	@$(SRCDIR)/tools/package/pkg c $@ $(PKGDIR) $(PKG_FILES)

%compress_file mmake=%(mmake) file=%(file)

GLOB_MKDIRS += $(PKG_DIR)

%end

#------------------------------------------------------------------------------
# Compresses %(file) with a gzip.
# Good in conjunction with for example %build_prog

%define compress_file mmake=/A file=/A

#MM- %(mmake)-gz : %(mmake) %(mmake)-gz-quick

#MM
%(mmake)-gz-quick : %(file).gz

%(file).gz: %(file)
	@$(ECHO) Compressing $(subst $(TARGETDIR)/,,$^)...
	@gzip -9 -f $^

%end


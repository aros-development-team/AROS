include $(SRCDIR)/config/aros.cfg

FILES := \
 aslhook \
 busyloop \
 camdtree \
 cctest \
 fileseek \
 frequencies \
 fsresource \
 getcpuinfo \
 helloworld \
 hostcb \
 hostlib \
 iffparsewrite \
 ilbmtoc \
 inquire \
 joystick \
 mathtest \
 partition \
 pthreadtest \
 simplepng \
 unixio \
 versionlib

SHTESTFILES=\
    pcilist \
    true

EXEDIR := $(AROS_TESTS)/misc

#MM- test : test-misc test-sh
#MM- test-quick : test-misc-quick test-sh-quick

#MM  test-sh : includes linklibs

%build_progs mmake=test-misc \
    files=$(FILES) targetdir=$(EXEDIR) uselibs="pthread"

USER_CFLAGS += -DADATE="\"$(shell date '+%d.%m.%Y')\""

%build_progs mmake=test-sh \
    files=$(SHTESTFILES) targetdir=$(EXEDIR) \
    usestartup=no

%common
